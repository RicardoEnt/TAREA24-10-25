  <input type="number" id="numeroUsuario" placeholder="Tu nÃºmero">

  <button onclick="verificarAdivinanza()">Probar</button>



  <p id="mensaje"></p>



  <script>

    // Genera un nÃºmero aleatorio entre 1 y 100

    const numeroSecreto = Math.floor(Math.random() * 100) + 1;

    let intentos = 0;



    // FunciÃ³n que compara el nÃºmero del usuario con el nÃºmero secreto

    function verificar(numeroUsuario, numeroSecreto) {

      if (numeroUsuario > numeroSecreto) return "El nÃºmero secreto es menor ðŸ”½";

      if (numeroUsuario < numeroSecreto) return "El nÃºmero secreto es mayor ðŸ”¼";

      return "ðŸŽ‰ Â¡Acertaste el nÃºmero!";

    }



    // FunciÃ³n que se ejecuta al presionar el botÃ³n

    function verificarAdivinanza() {

      const input = document.getElementById("numeroUsuario");

      const numeroUsuario = parseInt(input.value);

      const mensajeElemento = document.getElementById("mensaje");



      // Validar entrada

      if (isNaN(numeroUsuario) || numeroUsuario < 1 || numeroUsuario > 100) {

        mensajeElemento.textContent = "Por favor ingresa un nÃºmero entre 1 y 100.";

        return;

      }



      intentos++;

      const resultado = verificar(numeroUsuario, numeroSecreto);

      mensajeElemento.textContent = `${resultado} (Intentos: ${intentos})`;



      // Si acertÃ³, desactiva el input y el botÃ³n

      if (resultado.includes("Acertaste")) {

        input.disabled = true;

        document.querySelector("button").disabled = true;

      }

    }

  </script>



