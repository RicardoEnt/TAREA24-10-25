<body>



  <h2>NÃºmeros Pares en un Array</h2>



  <button onclick="mostrarPares()">Generar y mostrar pares</button>



  <ul id="listaPares"></ul>



  <script>

    // FunciÃ³n que filtra los nÃºmeros pares

    function filtrarPares(array) {

      return array.filter(num => num % 2 === 0);

    }



    function mostrarPares() {

      // Genera un array de 10 nÃºmeros aleatorios entre 1 y 100

      const numeros = Array.from({ length: 10 }, () => Math.floor(Math.random() * 100) + 1);



      // Filtra solo los pares

      const pares = filtrarPares(numeros);



      // Muestra los pares en la lista <ul>

      const lista = document.getElementById("listaPares");

      lista.innerHTML = ""; // Limpia la lista anterior



      if (pares.length === 0) {

        const li = document.createElement("li");

        li.textContent = "No hay nÃºmeros pares ðŸ˜…";

        lista.appendChild(li);

      } else {

        pares.forEach(num => {

          const li = document.createElement("li");

          li.textContent = num;

          lista.appendChild(li);

        });

      }

    }

  </script>



