  <h2>Contador de Palabras</h2>



  <textarea id="frase" placeholder="Escribe una frase..."></textarea><br>

  <button onclick="mostrarConteo()">Contar Palabras</button>



  <p id="resultado"></p>



  <script>

    function contarPalabras(frase) {

      // Quita espacios extras y divide por espacios

      const palabras = frase.trim().split(/\s+/);

      return frase.trim() === "" ? 0 : palabras.length;

    }



    function mostrarConteo() {

      const texto = document.getElementById("frase").value;

      const total = contarPalabras(texto);

      document.getElementById("resultado").textContent = "NÃºmero de palabras: " + total;

